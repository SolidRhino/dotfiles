{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash
set -eufo pipefail

if ! command -v brew >/dev/null 2>&1; then
    # Using Homebrew's prescribed install command verbatim (intentionally omits --proto/--tlsv1.2)
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

# Temp file required to run both install and cleanup against the same Brewfile
BREWFILE=$(mktemp)
trap 'rm -f "$BREWFILE"' EXIT

cat > "$BREWFILE" <<'EOF'
{{ range (concat .packages.common .packages.darwin.brews) -}}
brew "{{ . }}"
{{ end -}}
{{ range .packages.darwin.casks -}}
cask "{{ . }}"
{{ end -}}
EOF

brew bundle install --file="$BREWFILE"
brew bundle cleanup --force --file="$BREWFILE"  # intentionally removes packages not in list
{{ end -}}
